<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="connection.url">jdbc:h2:mem:bank_database;INIT=CREATE SCHEMA IF NOT EXISTS ibank</property>
        <property name="connection.driver_class">org.h2.Driver</property>
        <property name="connection.username">sa</property>
        <property name="connection.password"/>
        <property name="dialect">org.hibernate.dialect.H2Dialect</property>
        <property name="show_sql">true</property>
        <property name="format_sql">true</property>
        <property name="hbm2ddl.auto">create</property>


        <mapping class="model.Business"/>
        <mapping class="model.User"/>
        <mapping class="model.Person"/>
        <mapping class="model.Employee"/>
        <mapping class="model.CardType"/>
        <mapping class="model.CardAccount"/>
        <mapping class="model.Card"/>

    </session-factory>
</hibernate-configuration>